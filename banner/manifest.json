{
  "manifest_version": 2.0,
  "id": "banner",
  "type": "widget",
  "name": "Banner",
  "namespace": "Banner",
  "version": "1.2",
  "author": "ObviousAIChicken",
  "description": "Displays text and images that can be styled for dashboard optimization. (github.com/obviousaichicken/zabbix_widgets)",
  "widget": {
    "size": {
      "width": 20,
      "height": 4
    },
    "js_class": "CWidgetBanner",
    "refresh_rate": 0
  },
  "actions": {
    "widget.banner.view": {
      "class": "WidgetView"
    }
  },
  "assets": {
    "css": ["widget.css"],
    "js": ["class.widget.js"]
  }
}
